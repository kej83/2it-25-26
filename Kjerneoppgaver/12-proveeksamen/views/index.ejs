<!doctype html>
<html lang="no">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Biler (MWE)</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <main class="container">
    <h1>Biler</h1>

    <% if (infoText) { %>
      <p class="info"><%= infoText %></p>
    <% } %>

    <!-- MENY -->
    <section class="card">
      <h2>Meny</h2>
      <div class="row">
        <form method="GET" action="/visbiler">
          <button type="submit">Vis alle biler</button>
        </form>

        <form method="GET" action="/">
          <button type="submit" class="secondary">Til forsiden</button>
        </form>
      </div>
    </section>

    <!-- SØK 1: MERKE -->
    <section class="card">
      <h2>Søk på merke</h2>
      <form method="POST" action="/sokmerke" class="row">
        <input type="text" name="merke" placeholder="Skriv merke (f.eks. Toyota)" required />
        <button type="submit">Søk</button>
      </form>
    </section>

    <!-- SØK 2: ÅR -->
    <section class="card">
      <h2>Søk på år</h2>
      <form method="POST" action="/sokaar" class="row">
        <input type="number" name="aar" placeholder="Skriv år (f.eks. 2017)" required />
        <button type="submit">Søk</button>
      </form>
    </section>

    <!-- OPPDATER PRIS -->
    <section class="card">
      <h2>Endre pris (ID + ny pris)</h2>
      <form method="POST" action="/endrepris" class="row">
        <input type="number" name="id" placeholder="ID (f.eks. 1)" required />
        <input type="number" step="0.01" name="pris" placeholder="Ny pris (f.eks. 199000)" required />
        <button type="submit">Oppdater pris</button>
      </form>
    </section>

    <!-- LISTE -->
    <section class="card">
      <h2>Resultat (<%= biler.length %>)</h2>

      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Merke</th>
            <th>Modell</th>
            <th>Pris</th>
            <th>Km</th>
            <th>År</th>
          </tr>
        </thead>

        <tbody>
          <% if (biler.length === 0) { %>
            <tr><td colspan="6" class="muted">Ingen biler å vise.</td></tr>
          <% } %>

          <% biler.forEach(bil => { %>
            <tr>
              <td><%= bil.id %></td>
              <td><%= bil.merke %></td>
              <td><%= bil.modell %></td>
              <td><%= bil.pris %></td>
              <td><%= bil.km %></td>
              <td><%= bil.aar %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </main>
</body>
</html>
